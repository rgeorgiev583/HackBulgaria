package com.hackbulgaria.corejava.asciiplayer;

import org.bytedeco.javacv.FFmpegFrameGrabber;

public class VideoPlayer extends SequencePlayer {
	public VideoPlayer(String path) {
		super(path);
		
		FFmpegFrameGrabber g = new FFmpegFrameGrabber(file);
		g.start();

		for (int i = 0 ; i < 50 ; i++) {
		    ImageIO.write(g.grab().getBufferedImage(), "png", new File("frame-dump/video-frame-" + System.currentTimeMillis() + ".png"));
		}

		g.stop();
	}
}
